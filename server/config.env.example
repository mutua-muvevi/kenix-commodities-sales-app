# Kenix Commodities Server Configuration
# Copy this file to config.env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/kenix-commodities
# Production example:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kenix-commodities?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# M-Pesa Daraja API Configuration
# Get credentials from https://developer.safaricom.co.ke
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_PASSKEY=your-mpesa-passkey
MPESA_SHORTCODE=174379
MPESA_CALLBACK_URL=https://your-domain.com/api/payments/mpesa/callback

# Google Cloud Storage (for file uploads)
GCP_PROJECT_ID=your-gcp-project-id
GCP_BUCKET_NAME=kenix-commodities-uploads
GCP_KEYFILE_PATH=./gcp-service-account-key.json

# Email Configuration (SparkPost)
SPARKPOST_API_KEY=your-sparkpost-api-key
SENDER_EMAIL=noreply@kenixcommodities.co.ke

# Redis Configuration (for caching and queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Maps API (for route optimization)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Africa's Talking SMS Configuration
# Get credentials from https://africastalking.com
AFRICASTALKING_API_KEY=your-africastalking-api-key
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_SENDER_ID=KENIX

# JWT Access Token Configuration
JWT_ACCESS_SECRET=your-jwt-access-secret-change-this-in-production
